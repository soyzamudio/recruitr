.row#top
  .col-md-4.col-md-offset-4
    .col-md-12.text-center
      img(src='../../assets/img/logo-tagline-white.png', height='200', width='auto')
    .col-md-12.text-center
      .input-group(ng-if='!user')
        input.form-control(type='text', ng-model='email', placeholder='Enter your email')
        span.input-group-btn
          button.btn.btn-default(ng-click='createAccount(email)') View Profiles
    .col-md-12.text-center
      a.btn.btn-default(ng-if='user', ui-sref='profiles.list') View Profiles
